<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.v7.examinarsallotment.Notice">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView3"
        android:layout_above="@+id/choose"
        android:stackFromBottom="true"
        android:transcriptMode="normal"/>
    <Button
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:id="@+id/choose"
        android:layout_above="@+id/llnotice"
        android:background="@drawable/ic_today_black_24px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginBottom="20sp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_above="@+id/llnotice"
        android:id="@+id/lastdate"
        android:text="Choose Last Date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llnotice"
        android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:id="@+id/ednotice"
            android:inputType="textMultiLine" />
        <Button
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:id="@+id/btnnotice"
            android:background="@drawable/ic_send_24dp" />
    </LinearLayout>

</RelativeLayout>
